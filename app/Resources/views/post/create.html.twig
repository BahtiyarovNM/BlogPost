<!DOCTYPE html>
<html lang="en">
<head>
    <title>Create post</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>

</head>
<body>
{% include 'navigation/navigator.html.twig' %}
<div class="container">


    {{ form_start(form)}}








        <div class="form-group col-md-10">

            {{ form_row(form.title, { 'attr': {'class': "form-control",
                'placeholder': "Title"
            } }) }}
        </div>
        <div class="form-group col-md-10">
            <label for="sel1">Select from two to eight tags:</label>
            {{ form_widget(form.category,{ 'attr': {'class': "form-control"
            } }) }}

        </div>
            <div class="form-group col-md-10">
            <label for="sel2">Select type:</label>
            {{ form_widget(form.type,{ 'attr': {'class': "form-control"
            } }) }}
            </div>

        <div class="form-group col-md-10">

            {{ form_row(form.body,{ 'attr': {'class': "form-control",
                'rows': "20"
            } }) }}
        </div>
        <div class="form-group col-md-10">



        </div>
    <div class="form-group col-md-10">
    <button class="btn btn-lg btn-primary ">Create</button>
    </div>
    {{ form_end(form) }}
</div>

<script type="text/javascript">
    $("select").select2({

        allowClear: true,

       maximumInputLength: 8
    });

</script>
<script>
    tinymce.init({
        selector: 'textarea',

        plugins: [
            "advlist autolink lists link image charmap print preview anchor",
            "searchreplace visualblocks code fullscreen",
            "insertdatetime media table contextmenu paste imagetools"
        ],
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
        imagetools_cors_hosts: ['www.tinymce.com', 'codepen.io'],
        content_css: [
            '//fast.fonts.net/cssapi/e6dc9b99-64fe-4292-ad98-6974f93cd2a2.css',
            '//www.tinymce.com/css/codepen.min.css'
        ]
    });
</script>

</body>
</html>
